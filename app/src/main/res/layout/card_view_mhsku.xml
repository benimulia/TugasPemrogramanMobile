<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewMhsKu"
            android:layout_width="89dp"
            android:layout_height="85dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txtNamaMhsKu"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="@string/textview"
            app:layout_constraintStart_toEndOf="@+id/imageViewMhsKu"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtNimMhsKu"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:text="@string/textview"
            app:layout_constraintStart_toEndOf="@+id/imageViewMhsKu"
            app:layout_constraintTop_toBottomOf="@+id/txtNamaMhsKu" />

        <TextView
            android:id="@+id/txtCitaMhsKu"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="@string/textview"
            app:layout_constraintStart_toEndOf="@+id/imageViewMhsKu"
            app:layout_constraintTop_toBottomOf="@+id/txtGender" />

        <TextView
            android:id="@+id/txtHobiMhsKu"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="@string/textview"
            app:layout_constraintStart_toEndOf="@+id/imageViewMhsKu"
            app:layout_constraintTop_toBottomOf="@+id/txtCitaMhsKu" />

        <TextView
            android:id="@+id/txtMotoMhsKu"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:text="@string/textview"
            app:layout_constraintStart_toEndOf="@+id/imageViewMhsKu"
            app:layout_constraintTop_toBottomOf="@+id/txtHobiMhsKu" />

        <TextView
            android:id="@+id/txtGender"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:text="@string/textview"
            app:layout_constraintStart_toEndOf="@+id/imageViewMhsKu"
            app:layout_constraintTop_toBottomOf="@+id/txtNimMhsKu" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>